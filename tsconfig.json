{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "webworker"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./docs/.vitepress/*.mts",
    "./docs.vitepress/**/*.ts",
    "./docs.vitepress/**/*.vue",
    "./docssrc/*.mts",
    "./docssrc/**/*.ts",
    "./docs/src/**/*.vue"
  ],
  "exclude": ["node_modules/*"]
}
